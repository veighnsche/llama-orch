{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rbee-keeper",
  "version": "0.1.0",
  "identifier": "com.rbee.keeper",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cargo tauri-typegen generate && cd ../ui && npm run dev",
    "beforeBuildCommand": "cargo tauri-typegen generate && cd ../ui && npm run build"
  },
  "plugins": {
    "tauri-typegen": {
      "project_path": ".",
      "output_path": "./ui/src/generated",
      "validation_library": "none",
      "verbose": false,
      "visualize_deps": false
    }
  },
  "bundle": {
    "active": false
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "rbee Keeper",
        "width": 960,
        "height": 1080,
        "minWidth": 600,
        "minHeight": 800,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": ["main"],
          "permissions": ["core:default", "core:event:allow-listen", "core:event:allow-emit"]
        }
      ]
    }
  }
}
