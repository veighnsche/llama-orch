# Dockerfile for rbee-hive integration testing
# Created by: TEAM-106

FROM rust:1.75-slim as builder

WORKDIR /build

# Install dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy workspace files
COPY Cargo.toml Cargo.lock ./
COPY bin/rbee-hive ./bin/rbee-hive
COPY bin/shared-crates ./bin/shared-crates
COPY contracts ./contracts

# Build rbee-hive
RUN cargo build --release --bin rbee-hive

# Runtime image
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    sqlite3 \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /build/target/release/rbee-hive /usr/local/bin/

RUN mkdir -p /models /data

EXPOSE 9200

CMD ["rbee-hive"]
