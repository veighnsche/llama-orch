{
  "name": "@llama-orch/utils-node",
  "version": "0.0.0-draft",
  "private": true,
  "type": "module",
  "main": "./esm.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./esm.js",
      "require": "./index.cjs"
    }
  },
  "files": ["*.node", "index.cjs", "esm.js", "prebuilds/**", "README.md"],
  "scripts": {
    "build": "pnpm exec napi build --release --platform && pnpm run postbuild && pnpm run postbuild:guard",
    "postbuild": "node -e \"const fs=require('node:fs'); if (fs.existsSync('index.js')) fs.renameSync('index.js','index.cjs');\"",
    "postbuild:guard": "node .scripts/postbuild-guard.mjs",
    "smoke:fs": "node .smoke/fs_read_file.mjs",
    "smoke:prompt": "node .smoke/prompt_message.mjs",
    "smoke:llm": "node .smoke/llm_invoke.mjs",
    "smoke:types": "pnpm exec tsc -p ts-smoke/tsconfig.json",
    "drift:rust": "cargo test -q -p llama-orch-utils-node --lib",
    "check": "pnpm run build && pnpm run drift:rust && pnpm run smoke:fs && pnpm run smoke:prompt && pnpm run smoke:llm && pnpm run smoke:types"
  },
  "devDependencies": {
    "@napi-rs/cli": "latest",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16"
  },
  "napi": {
    "binaryName": "llama_orch_utils_node"
  },
  "license": "MIT"
}
