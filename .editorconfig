root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

# JS/TS/Vue use 2 spaces
[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.jsx]
indent_size = 2

[*.tsx]
indent_size = 2

[*.vue]
indent_size = 2
