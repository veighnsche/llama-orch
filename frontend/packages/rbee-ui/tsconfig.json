{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@rbee/ui/*": ["./src/*"],
      "@rbee/ui": ["./src/index.ts"]
    }
  },
  "include": ["src/**/*", "src/assets/images.d.ts"],
  "exclude": ["node_modules", "dist"]
}
