{
  "name": "@rbee/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": ["**/*.css", "**/*.png", "**/*.jpg", "**/*.jpeg", "**/*.webp", "**/*.svg"],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./globals": "./src/tokens/globals.css",
    "./tokens": "./src/tokens/index.ts",
    "./tokens/theme-tokens.css": "./src/tokens/theme-tokens.css",
    "./atoms": "./src/atoms/index.ts",
    "./atoms/*": "./src/atoms/*/index.ts",
    "./molecules": "./src/molecules/index.ts",
    "./molecules/*": "./src/molecules/*/index.ts",
    "./organisms": "./src/organisms/index.ts",
    "./organisms/*": "./src/organisms/*/index.ts",
    "./templates": "./src/templates/index.ts",
    "./templates/*": "./src/templates/*/index.ts",
    "./pages": "./src/pages/index.ts",
    "./pages/*": "./src/pages/*/index.ts",
    "./patterns/*": "./src/patterns/*/index.ts",
    "./utils": "./src/utils/index.ts",
    "./utils/*": "./src/utils/*.ts",
    "./data/*": "./src/data/*",
    "./hooks/*": "./src/hooks/*.ts",
    "./assets": "./src/assets/index.ts",
    "./assets/*": "./src/assets/*",
    "./icons": "./src/icons/index.ts",
    "./icons/*": "./src/icons/*",
    "./providers": "./src/providers/index.ts",
    "./providers/*": "./src/providers/*/index.ts"
  },
  "files": ["src", "dist"],
  "scripts": {
    "build": "pnpm run build:styles && pnpm run build:components",
    "build:styles": "postcss ./src/tokens/globals.css -o ./dist/index.css",
    "build:components": "tsc",
    "dev": "pnpm run dev:styles & pnpm run dev:components & storybook dev -p 6006 --no-open",
    "dev:styles": "postcss ./src/tokens/globals.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "test:ct": "playwright test",
    "test:ct:headed": "playwright test --headed",
    "test:ct:ui": "playwright test --ui",
    "test:ct:debug": "playwright test --debug",
    "test:ct:report": "playwright show-report"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@playwright/experimental-ct-react": "^1.50.2",
    "@playwright/test": "^1.50.2",
    "@repo/tailwind-config": "workspace:*",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-themes": "^9.1.10",
    "@storybook/nextjs": "^9.1.10",
    "@storybook/react": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.8",
    "jsdom": "^25.0.1",
    "next": "^15.5.5",
    "postcss-cli": "^11.0.1",
    "postcss-nesting": "^13.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "^9.1.10",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "embla-carousel-react": "^8.6.0",
    "geist": "^1.5.1",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.545.0",
    "next-themes": "^0.4.6",
    "prism-react-renderer": "^2.4.1",
    "react-day-picker": "^9.11.1",
    "react-hook-form": "^7.65.0",
    "react-resizable-panels": "^3.0.6",
    "recharts": "^3.2.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2"
  }
}
