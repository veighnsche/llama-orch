{
  // md-to-pdf configuration for rendering Markdown to PDF (A4)
  "$schema": "https://raw.githubusercontent.com/simonhaenisch/md-to-pdf/main/schema.json",
  "basedir": ".",
  "stylesheet": [
    "pdf.css"
  ],
  "pdf_options": {
    "format": "A4",
    "margin": {
      "top": "18mm",
      "right": "16mm",
      "bottom": "18mm",
      "left": "16mm"
    },
    "printBackground": true
  },
  "launch_options": {
    "args": ["--no-sandbox", "--disable-setuid-sandbox"]
  }
}
